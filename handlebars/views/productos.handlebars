<section class="p-4">
  <h2 class="text-secondary">Vista de Productos</h2>
  {{#if productos}}
<div class="mt-3 text-left">
      <a href="/api/productos/add">
        <button class="btn btn-success"> Agregar producto</button>
      </a>
    </div>
    <table class="table text-secondaty bg-light">
      <thead>
        <tr class="text-center">
          <th>#</th>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Foto</th>
        </tr>
      </thead>

      <tbody>
        {{#each productos}}
          <tr class="text-center">
            <td class="align-middle">{{this.id}}</td>
            <td class="align-middle">{{this.nombre}}</td>
            <td class="align-middle">{{this.precio}}</td>
            <td class="align-middle">
              <img src="{{this.img}}" alt="{{this.nombre}}" />
            </td>
          </tr>
        {{/each}}
      </tbody>

    </table>
    
  {{else}}

    <div  class="mt-3 text-center">

      <h2 class="p-4">No hay productos aun </h2>
      <div class="mt-3 text-center">
        <a href="/api/productos/add">
          <button class="btn btn-success"> Agregar producto</button>
        </a>
      </div>
    </div>
  {{/if}}

</section>